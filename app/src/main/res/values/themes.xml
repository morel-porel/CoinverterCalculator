<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="iconColor" format="color" />
    <attr name="plainColor" format="color" />
<!--    <style name="Theme.CoinverterCalculator" parent="android:Theme.Material.Light.NoActionBar" >-->
    <style name="Theme.CoinverterCalculator" parent="Theme.AppCompat.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="colorAccent">@color/black</item>
        <item name="iconColor">#ED2175</item>
        <item name="plainColor">#d6d7d7</item>
    </style>

    <style name="TITLE">
        <item name ="android:textColor">#ED2175</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="TITLEPLAIN">
        <item name ="android:textColor">@color/white</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="TEXT">
        <item name ="android:textColor">#ED2175</item>
    </style>

    <style name="BUTTON">
        <item name ="android:background">#4a4a4a</item>
        <item name ="android:textColor">#EAEAEA</item>
    </style>

    <style name="UNFILLED">
        <item name ="android:background">@drawable/button_unfilled</item>
        <item name ="android:textColor">#FCA95F</item>
    </style>

    <style name="FILLED">
        <item name ="android:background">@drawable/filledbg</item>
        <item name ="android:textColor">"@color/white"</item>
    </style>

    <style name="CALC_COLORED">
        <item name ="android:background">@drawable/basic_colored</item>
        <item name ="android:textColor">"@color/white"</item>
        <item name ="android:textStyle">bold</item>
    </style>

    <style name="CALC_PLAIN">
        <item name ="android:background">@drawable/basic_plain</item>
        <item name ="android:textColor">"@color/black"</item>
        <item name ="android:textStyle">bold</item>
    </style>


</resources>

