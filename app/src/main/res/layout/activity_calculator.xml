<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/display_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="25dp"
            android:gravity="bottom|end"
            android:layout_marginLeft="85dp"
            />

        <Spinner
            android:id="@+id/curChange_Top"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/display_bottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="25dp"
            android:gravity="bottom|end"
            android:layout_marginLeft="85dp" />

        <Spinner
            android:id="@+id/curChange_Bottom"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/button_history"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="history"
            android:textSize="9dp"/>

        <Button
            android:id="@+id/button_curChange"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="change"
            android:textSize="9dp"
            android:layout_toRightOf="@id/button_history"/>

        <Button
            android:id="@+id/button_clear"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:text="Clear"
            android:layout_toRightOf="@+id/button_curChange"/>

        <Button
            android:id="@+id/button_equal"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@id/button_clear"
            android:text="="
            android:textSize="30dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@id/button_history"
            android:layout_marginTop="0dp"
            android:text="7"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@+id/button_curChange"
            android:layout_toRightOf="@id/button7"
            android:text="8"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@+id/button_clear"
            android:layout_toRightOf="@id/button8"
            android:text="9"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button_del"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@+id/button9"
            android:layout_below="@id/button_equal"
            android:text="del"/>

        <Button
            android:id="@+id/button_dec"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@+id/button6"
            android:layout_below="@+id/button_del"
            android:text="â€¢"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@+id/button3"
            android:layout_below="@id/button_dec"
            android:text="0"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@id/button7"
            android:text="4"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@id/button8"
            android:layout_toRightOf="@id/button4"
            android:text="5"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@id/button5"
            android:text="6"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@id/button4"
            android:text="1"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@id/button1"
            android:layout_below="@id/button5"
            android:text="2"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_toRightOf="@id/button2"
            android:layout_below="@+id/button6"
            android:text="3"
            android:textSize="20dp"/>

    </RelativeLayout>

</LinearLayout>